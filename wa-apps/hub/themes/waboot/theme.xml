    <!-- THEME SETTINGS SECTION -->
    <settings>
        <!-- Profile Display Settings -->
        <setting name="show_profile_photos" type="checkbox" default="1">
            <option value="1">Show profile photos</option>
        </setting>
        
        <setting name="show_online_status" type="checkbox" default="1">
            <option value="1">Show online status</option>
        </setting>
        
        <setting name="show_last_seen" type="checkbox" default="1">
            <option value="1">Show last seen</option>
        </setting>
        
        <setting name="show_friend_count" type="checkbox" default="1">
            <option value="1">Show friend count</option>
        </setting>
        
        <setting name="show_follower_count" type="checkbox" default="1">
            <option value="1">Show follower count</option>
        </setting>
        
        <!-- Privacy Settings -->
        <setting name="default_privacy" type="select" default="public">
            <option value="public">Public</option>
            <option value="friends">Friends only</option>
            <option value="private">Private</option>
        </setting>
        
        <setting name="allow_friend_requests" type="checkbox" default="1">
            <option value="1">Allow friend requests</option>
        </setting>
        
        <setting name="allow_messages" type="checkbox" default="1">
            <option value="1">Allow messages from members</option>
        </setting>
        
        <setting name="show_email" type="checkbox" default="0">
            <option value="1">Show email address</option>
        </setting>
        
        <!-- Activity Feed Settings -->
        <setting name="activity_items_per_page" type="select" default="20">
            <option value="10">10 items</option>
            <option value="20">20 items</option>
            <option value="30">30 items</option>
            <option value="50">50 items</option>
        </setting>
        
        <setting name="show_activity_photos" type="checkbox" default="1">
            <option value="1">Show activity photos</option>
        </setting>
        
        <setting name="auto_refresh_activity" type="checkbox" default="1">
            <option value="1">Auto-refresh activity feed</option>
        </setting>
        
        <!-- Group Settings -->
        <setting name="max_groups_per_user" type="select" default="10">
            <option value="5">5 groups</option>
            <option value="10">10 groups</option>
            <option value="15">15 groups</option>
            <option value="unlimited">Unlimited</option>
        </setting>
        
        <setting name="allow_group_creation" type="checkbox" default="1">
            <option value="1">Allow group creation</option>
        </setting>
        
        <setting name="moderate_group_posts" type="checkbox" default="0">
            <option value="1">Moderate group posts</option>
        </setting>
        
        <!-- Event Settings -->
        <setting name="max_events_per_user" type="select" default="5">
            <option value="3">3 events</option>
            <option value="5">5 events</option>
            <option value="10">10 events</option>
            <option value="unlimited">Unlimited</option>
        </setting>
        
        <setting name="allow_event_creation" type="checkbox" default="1">
            <option value="1">Allow event creation</option>
        </setting>
        
        <setting name="show_event_attendees" type="checkbox" default="1">
            <option value="1">Show event attendees</option>
        </setting>
        
        <!-- Messaging Settings -->
        <setting name="enable_messaging" type="checkbox" default="1">
            <option value="1">Enable messaging system</option>
        </setting>
        
        <setting name="message_notifications" type="checkbox" default="1">
            <option value="1">Message notifications</option>
        </setting>
        
        <setting name="read_receipts" type="checkbox" default="1">
            <option value="1">Read receipts</option>
        </setting>
        
        <!-- Search and Discovery -->
        <setting name="enable_advanced_search" type="checkbox" default="1">
            <option value="1">Enable advanced search</option>
        </setting>
        
        <setting name="show_search_suggestions" type="checkbox" default="1">
            <option value="1">Show search suggestions</option>
        </setting>
        
        <setting name="enable_location_search" type="checkbox" default="1">
            <option value="1">Enable location-based search</option>
        </setting>
        
        <!-- Notification Settings -->
        <setting name="email_notifications" type="checkbox" default="1">
            <option value="1">Email notifications</option>
        </setting>
        
        <setting name="push_notifications" type="checkbox" default="1">
            <option value="1">Push notifications</option>
        </setting>
        
        <setting name="notification_sound" type="checkbox" default="1">
            <option value="1">Notification sound</option>
        </setting>
        
        <!-- Performance Settings -->
        <setting name="lazy_load_profiles" type="checkbox" default="1">
            <option value="1">Lazy load profiles</option>
        </setting>
        
        <setting name="cache_activity_feed" type="checkbox" default="1">
            <option value="1">Cache activity feed</option>
        </setting>
        
        <setting name="ajax_messaging" type="checkbox" default="1">
            <option value="1">AJAX messaging</option>
        </setting>
        
        <!-- Security Settings -->
        <setting name="require_email_verification" type="checkbox" default="1">
            <option value="1">Require email verification</option>
        </setting>
        
        <setting name="enable_captcha" type="checkbox" default="0">
            <option value="1">Enable CAPTCHA</option>
        </setting>
        
        <setting name="moderate_new_members" type="checkbox" default="0">
            <option value="1">Moderate new members</option>
        </setting>
        
        <!-- Analytics Settings -->
        <setting name="track_user_activity" type="checkbox" default="1">
            <option value="1">Track user activity</option>
        </setting>
        
        <setting name="show_analytics" type="checkbox" default="0">
            <option value="1">Show analytics to admins</option>
        </setting>
        
        <setting name="enable_google_analytics" type="checkbox" default="0">
            <option value="1">Enable Google Analytics</option>
        </setting>
    </settings>
