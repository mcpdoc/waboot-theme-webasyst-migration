    <!-- THEME SETTINGS SECTION -->
    <settings>
        <!-- Product Display Settings -->
        <setting name="products_per_page" type="select" default="12">
            <option value="6">6 products</option>
            <option value="12">12 products</option>
            <option value="24">24 products</option>
            <option value="48">48 products</option>
        </setting>
        
        <setting name="product_grid_columns" type="select" default="3">
            <option value="2">2 columns</option>
            <option value="3">3 columns</option>
            <option value="4">4 columns</option>
            <option value="5">5 columns</option>
        </setting>
        
        <setting name="show_product_rating" type="checkbox" default="1">
            <option value="1">Show product ratings</option>
        </setting>
        
        <setting name="show_product_reviews" type="checkbox" default="1">
            <option value="1">Show product reviews</option>
        </setting>
        
        <setting name="show_quick_view" type="checkbox" default="1">
            <option value="1">Show quick view button</option>
        </setting>
        
        <setting name="show_wishlist_button" type="checkbox" default="1">
            <option value="1">Show wishlist button</option>
        </setting>
        
        <setting name="show_compare_button" type="checkbox" default="1">
            <option value="1">Show compare button</option>
        </setting>
        
        <!-- Cart Settings -->
        <setting name="cart_type" type="select" default="dropdown">
            <option value="dropdown">Dropdown cart</option>
            <option value="sidebar">Sidebar cart</option>
            <option value="modal">Modal cart</option>
        </setting>
        
        <setting name="show_cart_total" type="checkbox" default="1">
            <option value="1">Show cart total</option>
        </setting>
        
        <setting name="show_cart_count" type="checkbox" default="1">
            <option value="1">Show cart item count</option>
        </setting>
        
        <!-- Filter Settings -->
        <setting name="show_price_filter" type="checkbox" default="1">
            <option value="1">Show price filter</option>
        </setting>
        
        <setting name="show_category_filter" type="checkbox" default="1">
            <option value="1">Show category filter</option>
        </setting>
        
        <setting name="show_brand_filter" type="checkbox" default="1">
            <option value="1">Show brand filter</option>
        </setting>
        
        <setting name="show_availability_filter" type="checkbox" default="1">
            <option value="1">Show availability filter</option>
        </setting>
        
        <!-- Checkout Settings -->
        <setting name="guest_checkout" type="checkbox" default="1">
            <option value="1">Allow guest checkout</option>
        </setting>
        
        <setting name="require_account" type="checkbox" default="0">
            <option value="1">Require account for checkout</option>
        </setting>
        
        <setting name="show_order_notes" type="checkbox" default="1">
            <option value="1">Show order notes field</option>
        </setting>
        
        <!-- Review Settings -->
        <setting name="require_login_review" type="checkbox" default="1">
            <option value="1">Require login to write reviews</option>
        </setting>
        
        <setting name="moderate_reviews" type="checkbox" default="1">
            <option value="1">Moderate reviews before publishing</option>
        </setting>
        
        <setting name="review_rating_required" type="checkbox" default="1">
            <option value="1">Require rating for reviews</option>
        </setting>
        
        <!-- SEO Settings -->
        <setting name="show_product_schema" type="checkbox" default="1">
            <option value="1">Show product schema markup</option>
        </setting>
        
        <setting name="show_review_schema" type="checkbox" default="1">
            <option value="1">Show review schema markup</option>
        </setting>
        
        <setting name="show_breadcrumbs" type="checkbox" default="1">
            <option value="1">Show breadcrumbs</option>
        </setting>
        
        <!-- Performance Settings -->
        <setting name="lazy_load_images" type="checkbox" default="1">
            <option value="1">Lazy load product images</option>
        </setting>
        
        <setting name="infinite_scroll" type="checkbox" default="0">
            <option value="1">Enable infinite scroll</option>
        </setting>
        
        <setting name="ajax_add_to_cart" type="checkbox" default="1">
            <option value="1">AJAX add to cart</option>
        </setting>
        
        <!-- Currency Settings -->
        <setting name="show_currency_selector" type="checkbox" default="1">
            <option value="1">Show currency selector</option>
        </setting>
        
        <setting name="default_currency" type="text" default="USD">
            <option value="">Default currency code</option>
        </setting>
        
        <!-- Social Commerce -->
        <setting name="show_social_share" type="checkbox" default="1">
            <option value="1">Show social share buttons</option>
        </setting>
        
        <setting name="show_facebook_pixel" type="checkbox" default="0">
            <option value="1">Enable Facebook Pixel</option>
        </setting>
        
        <setting name="show_google_analytics" type="checkbox" default="0">
            <option value="1">Enable Google Analytics</option>
        </setting>
