    <!-- THEME SETTINGS SECTION -->
    <settings>
        <!-- Campaign Display Settings -->
        <setting name="campaigns_per_page" type="select" default="10">
            <option value="5">5 campaigns</option>
            <option value="10">10 campaigns</option>
            <option value="20">20 campaigns</option>
            <option value="50">50 campaigns</option>
        </setting>
        
        <setting name="show_campaign_stats" type="checkbox" default="1">
            <option value="1">Show campaign statistics</option>
        </setting>
        
        <setting name="show_subscriber_count" type="checkbox" default="1">
            <option value="1">Show subscriber count</option>
        </setting>
        
        <setting name="show_send_date" type="checkbox" default="1">
            <option value="1">Show send date</option>
        </setting>
        
        <setting name="show_campaign_status" type="checkbox" default="1">
            <option value="1">Show campaign status</option>
        </setting>
        
        <!-- Email Editor Settings -->
        <setting name="default_editor" type="select" default="visual">
            <option value="text">Text Editor</option>
            <option value="html">HTML Editor</option>
            <option value="visual">Visual Editor</option>
        </setting>
        
        <setting name="auto_save_drafts" type="checkbox" default="1">
            <option value="1">Auto-save drafts</option>
        </setting>
        
        <setting name="show_html_source" type="checkbox" default="1">
            <option value="1">Show HTML source</option>
        </setting>
        
        <setting name="enable_image_upload" type="checkbox" default="1">
            <option value="1">Enable image upload</option>
        </setting>
        
        <!-- Template Settings -->
        <setting name="show_template_gallery" type="checkbox" default="1">
            <option value="1">Show template gallery</option>
        </setting>
        
        <setting name="allow_custom_templates" type="checkbox" default="1">
            <option value="1">Allow custom templates</option>
        </setting>
        
        <setting name="template_categories" type="checkbox" default="1">
            <option value="1">Show template categories</option>
