        <!-- Subscriber Management -->
        <setting name="subscribers_per_page" type="select" default="50">
            <option value="25">25 subscribers</option>
            <option value="50">50 subscribers</option>
            <option value="100">100 subscribers</option>
            <option value="200">200 subscribers</option>
        </setting>
        
        <setting name="show_subscriber_activity" type="checkbox" default="1">
            <option value="1">Show subscriber activity</option>
        </setting>
        
        <setting name="enable_double_optin" type="checkbox" default="1">
            <option value="1">Enable double opt-in</option>
        </setting>
        
        <setting name="show_unsubscribe_link" type="checkbox" default="1">
            <option value="1">Show unsubscribe link</option>
        </setting>
        
        <!-- Automation Settings -->
        <setting name="enable_automation" type="checkbox" default="1">
            <option value="1">Enable automation</option>
        </setting>
        
        <setting name="max_automation_workflows" type="select" default="10">
            <option value="5">5 workflows</option>
            <option value="10">10 workflows</option>
            <option value="20">20 workflows</option>
            <option value="unlimited">Unlimited</option>
        </setting>
        
        <setting name="automation_notifications" type="checkbox" default="1">
            <option value="1">Automation notifications</option>
        </setting>
        
        <!-- Reporting Settings -->
        <setting name="enable_tracking" type="checkbox" default="1">
            <option value="1">Enable email tracking</option>
        </setting>
        
        <setting name="track_opens" type="checkbox" default="1">
            <option value="1">Track email opens</option>
        </setting>
        
        <setting name="track_clicks" type="checkbox" default="1">
            <option value="1">Track link clicks</option>
        </setting>
        
        <setting name="track_unsubscribes" type="checkbox" default="1">
            <option value="1">Track unsubscribes</option>
        </setting>
        
        <!-- Performance Settings -->
        <setting name="batch_sending" type="checkbox" default="1">
            <option value="1">Enable batch sending</option>
        </setting>
        
        <setting name="send_rate_limit" type="select" default="100">
            <option value="50">50 emails per hour</option>
            <option value="100">100 emails per hour</option>
            <option value="200">200 emails per hour</option>
            <option value="500">500 emails per hour</option>
        </setting>
        
        <setting name="retry_failed_sends" type="checkbox" default="1">
            <option value="1">Retry failed sends</option>
        </setting>
        
        <!-- Security Settings -->
        <setting name="require_confirmation" type="checkbox" default="1">
            <option value="1">Require confirmation for sending</option>
        </setting>
        
        <setting name="spam_check" type="checkbox" default="1">
            <option value="1">Enable spam checking</option>
        </setting>
        
        <setting name="dkim_signing" type="checkbox" default="1">
            <option value="1">Enable DKIM signing</option>
        </setting>
        
        <!-- Analytics Settings -->
        <setting name="enable_analytics" type="checkbox" default="1">
