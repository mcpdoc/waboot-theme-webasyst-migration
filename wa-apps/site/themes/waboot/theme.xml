    <!-- THEME SETTINGS SECTION -->
    <settings>
        <!-- Color Scheme Settings -->
        <setting name="color_scheme" type="select" default="light">
            <option value="light">Light Theme</option>
            <option value="dark">Dark Theme</option>
            <option value="auto">Auto (System)</option>
        </setting>
        
        <!-- Typography Settings -->
        <setting name="font_family" type="select" default="inter">
            <option value="inter">Inter</option>
            <option value="roboto">Roboto</option>
            <option value="open_sans">Open Sans</option>
            <option value="system">System Font</option>
        </setting>
        
        <setting name="font_size" type="select" default="medium">
            <option value="small">Small</option>
            <option value="medium">Medium</option>
            <option value="large">Large</option>
        </setting>
        
        <!-- Layout Settings -->
        <setting name="container_width" type="select" default="1200">
            <option value="1140">1140px (Bootstrap Default)</option>
            <option value="1200">1200px</option>
            <option value="1320">1320px</option>
            <option value="1400">1400px</option>
        </setting>
        
        <setting name="sidebar_position" type="select" default="right">
            <option value="left">Left</option>
            <option value="right">Right</option>
            <option value="none">No Sidebar</option>
        </setting>
        
        <!-- Header Settings -->
        <setting name="header_style" type="select" default="standard">
            <option value="standard">Standard</option>
            <option value="centered">Centered</option>
            <option value="minimal">Minimal</option>
        </setting>
        
        <setting name="show_search" type="checkbox" default="1">
            <option value="1">Show Search Bar</option>
        </setting>
        
        <setting name="show_cart" type="checkbox" default="1">
            <option value="1">Show Shopping Cart</option>
        </setting>
        
        <!-- Footer Settings -->
        <setting name="footer_columns" type="select" default="4">
            <option value="2">2 Columns</option>
            <option value="3">3 Columns</option>
            <option value="4">4 Columns</option>
            <option value="5">5 Columns</option>
        </setting>
        
        <setting name="show_social_links" type="checkbox" default="1">
            <option value="1">Show Social Media Links</option>
        </setting>
        
        <!-- Performance Settings -->
        <setting name="lazy_loading" type="checkbox" default="1">
            <option value="1">Enable Lazy Loading</option>
        </setting>
        
        <setting name="minify_css" type="checkbox" default="1">
            <option value="1">Minify CSS</option>
        </setting>
        
        <setting name="minify_js" type="checkbox" default="1">
            <option value="1">Minify JavaScript</option>
        </setting>
        
        <!-- SEO Settings -->
        <setting name="json_ld_enabled" type="checkbox" default="1">
            <option value="1">Enable JSON-LD Structured Data</option>
        </setting>
        
        <setting name="schema_org_enabled" type="checkbox" default="1">
            <option value="1">Enable Schema.org Markup</option>
        </setting>
        
        <!-- Accessibility Settings -->
        <setting name="high_contrast" type="checkbox" default="0">
            <option value="1">Enable High Contrast Mode</option>
        </setting>
        
        <setting name="reduced_motion" type="checkbox" default="0">
            <option value="1">Respect Reduced Motion Preferences</option>
        </setting>
        
        <!-- Social Media Settings -->
        <setting name="facebook_url" type="text" default="">
            <option value="">Facebook URL</option>
        </setting>
        
        <setting name="twitter_url" type="text" default="">
            <option value="">Twitter URL</option>
        </setting>
        
        <setting name="instagram_url" type="text" default="">
