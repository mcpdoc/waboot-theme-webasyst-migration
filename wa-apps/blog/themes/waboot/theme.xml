<?xml version="1.0" encoding="utf-8"?>
<theme id="waboot" app="blog">
    <name>Waboot Blog</name>
    <description>A modern, fully-local Webasyst blog theme inheriting from site:waboot. Built with Bootstrap 5, Alpine.js, and BEM methodology for outstanding content management performance.</description>
    <version>1.0.0</version>
    <vendor>Waboot Team</vendor>
    <author>WordPress to Webasyst Migration Project</author>
    <url>https://github.com/wp-wa-migration/waboot</url>
    
    <!-- Parent theme - inherits from site:waboot -->
    <parent_theme>site:waboot</parent_theme>
    
