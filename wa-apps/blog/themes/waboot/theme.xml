    <!-- THEME SETTINGS SECTION -->
    <settings>
        <!-- Article Display Settings -->
        <setting name="articles_per_page" type="select" default="10">
            <option value="5">5 articles</option>
            <option value="10">10 articles</option>
            <option value="15">15 articles</option>
            <option value="20">20 articles</option>
        </setting>
        
        <setting name="show_featured_image" type="checkbox" default="1">
            <option value="1">Show featured image</option>
        </setting>
        
        <setting name="show_author_info" type="checkbox" default="1">
            <option value="1">Show author information</option>
        </setting>
        
        <setting name="show_publish_date" type="checkbox" default="1">
            <option value="1">Show publish date</option>
        </setting>
        
        <setting name="show_reading_time" type="checkbox" default="1">
            <option value="1">Show reading time</option>
        </setting>
        
        <setting name="show_excerpt" type="checkbox" default="1">
            <option value="1">Show article excerpt</option>
        </setting>
        
        <setting name="excerpt_length" type="select" default="150">
            <option value="100">100 characters</option>
            <option value="150">150 characters</option>
            <option value="200">200 characters</option>
            <option value="250">250 characters</option>
        </setting>
        
        <!-- Comments Settings -->
        <setting name="enable_comments" type="checkbox" default="1">
            <option value="1">Enable comments</option>
        </setting>
        
        <setting name="moderate_comments" type="checkbox" default="1">
            <option value="1">Moderate comments</option>
        </setting>
        
        <setting name="require_login_comment" type="checkbox" default="0">
            <option value="1">Require login to comment</option>
        </setting>
        
        <setting name="show_comment_count" type="checkbox" default="1">
            <option value="1">Show comment count</option>
        </setting>
        
        <!-- Social Sharing Settings -->
        <setting name="show_social_share" type="checkbox" default="1">
            <option value="1">Show social share buttons</option>
        </setting>
        
        <setting name="share_on_facebook" type="checkbox" default="1">
            <option value="1">Share on Facebook</option>
        </setting>
        
        <setting name="share_on_twitter" type="checkbox" default="1">
            <option value="1">Share on Twitter</option>
        </setting>
        
        <setting name="share_on_linkedin" type="checkbox" default="1">
            <option value="1">Share on LinkedIn</option>
        </setting>
        
        <setting name="show_copy_link" type="checkbox" default="1">
            <option value="1">Show copy link button</option>
        </setting>
        
        <!-- Newsletter Settings -->
        <setting name="show_newsletter_signup" type="checkbox" default="1">
            <option value="1">Show newsletter signup</option>
        </setting>
        
        <setting name="newsletter_position" type="select" default="sidebar">
            <option value="sidebar">In sidebar</option>
            <option value="footer">In footer</option>
            <option value="popup">As popup</option>
        </setting>
        
        <!-- Related Content Settings -->
        <setting name="show_related_articles" type="checkbox" default="1">
            <option value="1">Show related articles</option>
        </setting>
        
        <setting name="related_articles_count" type="select" default="3">
            <option value="2">2 articles</option>
            <option value="3">3 articles</option>
            <option value="4">4 articles</option>
            <option value="6">6 articles</option>
        </setting>
        
        <setting name="show_popular_articles" type="checkbox" default="1">
            <option value="1">Show popular articles</option>
        </setting>
        
        <!-- SEO Settings -->
        <setting name="show_article_schema" type="checkbox" default="1">
            <option value="1">Show article schema markup</option>
        </setting>
        
        <setting name="show_author_schema" type="checkbox" default="1">
            <option value="1">Show author schema markup</option>
        </setting>
        
        <setting name="show_breadcrumbs" type="checkbox" default="1">
            <option value="1">Show breadcrumbs</option>
        </setting>
        
        <setting name="show_meta_description" type="checkbox" default="1">
            <option value="1">Show meta description</option>
        </setting>
        
        <!-- Performance Settings -->
        <setting name="lazy_load_images" type="checkbox" default="1">
            <option value="1">Lazy load images</option>
        </setting>
        
        <setting name="infinite_scroll" type="checkbox" default="0">
            <option value="1">Enable infinite scroll</option>
        </setting>
        
        <setting name="ajax_comments" type="checkbox" default="1">
            <option value="1">AJAX comments</option>
        </setting>
        
        <!-- Reading Experience -->
        <setting name="reading_mode" type="checkbox" default="1">
            <option value="1">Enable reading mode</option>
        </setting>
        
        <setting name="font_size_control" type="checkbox" default="1">
            <option value="1">Show font size controls</option>
        </setting>
        
        <setting name="dark_mode_article" type="checkbox" default="1">
            <option value="1">Enable dark mode for articles</option>
        </setting>
        
        <!-- Analytics Settings -->
        <setting name="track_reading_time" type="checkbox" default="1">
            <option value="1">Track reading time</option>
        </setting>
        
        <setting name="track_scroll_depth" type="checkbox" default="1">
            <option value="1">Track scroll depth</option>
        </setting>
        
        <setting name="show_google_analytics" type="checkbox" default="0">
            <option value="1">Enable Google Analytics</option>
        </setting>
    </settings>
</theme>